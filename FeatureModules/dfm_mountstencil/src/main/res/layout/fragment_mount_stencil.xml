<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 標題 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="掛網作業 (Mount Stencil)"
        android:textStyle="bold"
        android:textSize="20sp" />

    <!-- 產線 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="產線 (Line)" />

    <Spinner
        android:id="@+id/spnLine"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp" />

    <!-- 料號 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="料號 (Part No)" />

    <EditText
        android:id="@+id/txtPartNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="8dp"
        android:hint="請輸入料號" />

    <!-- 鋼網 ID -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="鋼網編號 (Stencil ID)" />

    <EditText
        android:id="@+id/txtStencilId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="8dp"
        android:hint="請輸入鋼網編號" />

    <!-- 空白填滿區域 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 底部按鈕：Mount 與 Close 同一排 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnMount"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Mount" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Close" />
    </LinearLayout>

</LinearLayout>
